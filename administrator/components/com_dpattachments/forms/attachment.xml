<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" readonly="true"
			label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text" required="true"
			label="JGLOBAL_TITLE" description="JFIELD_TITLE_DESC" />

		<field name="path" type="text" required="true"
			label="COM_DPATTACHMENTS_FIELD_PATH_LABEL" description="COM_DPATTACHMENTS_FIELD_PATH_DESC"/>

		<field name="item_id" type="text" readonly="true"
		    label="COM_DPATTACHMENTS_FIELD_ITEM_ID_LABEL" description="COM_DPATTACHMENTS_FIELD_ITEM_ID_DESC"/>

		<field name="context" type="text" required="true" readonly="true"
		    label="COM_DPATTACHMENTS_FIELD_CONTEXT_LABEL" description="COM_DPATTACHMENTS_FIELD_CONTEXT_DESC"/>

		<field name="alias" type="text"
			label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC"/>

		<field name="state" type="list" default="1"
		    label="JSTATUS" description="COM_DPATTACHMENTS_FIELD_STATE_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="created" type="calendar" format="%Y-%m-%d %H:%M:%S" filter="user_utc" translateformat="true" showtime="true"
		    label="COM_DPATTACHMENTS_FIELD_CREATED_LABEL" description="COM_DPATTACHMENTS_FIELD_CREATED_DESC"/>

		<field name="created_by" type="user"
		    label="COM_DPATTACHMENTS_FIELD_CREATED_BY_LABEL" description="COM_DPATTACHMENTS_FIELD_CREATED_BY_DESC" />

		<field name="created_by_alias" type="text"
		    label="COM_DPATTACHMENTS_FIELD_CREATED_BY_ALIAS_LABEL" description="COM_DPATTACHMENTS_FIELD_CREATED_BY_ALIAS_DESC"/>

		<field name="modified" type="calendar" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" translateformat="true" showtime="true"
		    label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_DPATTACHMENTS_FIELD_MODIFIED_DESC"/>

		<field name="modified_by" type="user" readonly="true" filter="unset"
		 	label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"/>

		<field name="checked_out" type="hidden" filter="unset"/>

		<field name="checked_out_time" type="hidden" filter="unset"/>

		<field name="publish_up" type="calendar" format="%Y-%m-%d %H:%M:%S" filter="user_utc" translateformat="true" showtime="true"
		    label="COM_DPATTACHMENTS_FIELD_PUBLISH_UP_LABEL" description="COM_DPATTACHMENTS_FIELD_PUBLISH_UP_DESC"/>

		<field name="publish_down" type="calendar" format="%Y-%m-%d %H:%M:%S" filter="user_utc" translateformat="true" showtime="true"
		    label="COM_DPATTACHMENTS_FIELD_PUBLISH_DOWN_LABEL" description="COM_DPATTACHMENTS_FIELD_PUBLISH_DOWN_DESC"/>

		<field name="version" type="text" filter="unset" readonly="true"
		    label="COM_DPATTACHMENTS_FIELD_VERSION_LABEL" description="COM_DPATTACHMENTS_FIELD_VERSION_DESC"/>

		<field name="ordering" type="text" default="0"
			label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />

		<field name="metakey" type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL" description="JFIELD_META_KEYWORDS_DESC"/>

		<field name="metadesc" type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL" description="JFIELD_META_DESCRIPTION_DESC"/>

		<field name="access" type="accesslevel"
			label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC"/>

		<field name="hits" type="text" readonly="true" filter="unset"
			label="COM_DPATTACHMENTS_FIELD_HITS_LABEL" description="COM_DPATTACHMENTS_FIELD_HITS_DESC"/>

		<field name="language" type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL" description="COM_DPATTACHMENTS_FIELD_LANGUAGE_DESC">
			<option value="*">JALL</option>
		</field>

		<field name="featured" type="list" default="0"
			label="JFEATURED" description="COM_DPATTACHMENTS_FIELD_FEATURED_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
</form>
